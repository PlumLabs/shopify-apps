{% assign product_json = product | json | replace: '"', "'" %}

<style>
  .container {
    display: flex;
    justify-content: center;
    padding: 20px;
  }
  .product-image {
    flex: 1;
    max-width: 100%;
    padding: 10px;
  }
  .product-details {
    flex: 1;
    max-width: 100%;
    padding: 10px;
    border-left: 1px solid #e1e1e1;
  }
  .product-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
  }
  .product-price {
    font-size: 20px;
    color: #d0021b;
    margin-bottom: 20px;
  }
  .button-group {
    display: flex;
    gap: 10px;
  }
</style>

<div id="product-show-component" data-product="{{ product_json }}"></div>
<script type="text/babel" src="{{ 'ProductShow.js' | asset_url }}"></script>
